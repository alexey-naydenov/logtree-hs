name:                logtree
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/alexey-naydenov/logtree#readme
license:             BSD3
license-file:        LICENSE
author:              Alexey Naydenov
maintainer:          alexey.naydenov@linux.com
copyright:           2017 Alexey Naydenov
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     LogTree.Lib
  build-depends:       base >= 4.7 && < 5
  default-language:    Haskell2010
  ghc-options:         -Wall

executable logtree-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , logtree
  default-language:    Haskell2010

test-suite logtree-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , logtree
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/alexey-naydenov/logtree
